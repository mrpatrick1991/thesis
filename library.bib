   issn = {21699402},
   issue = {4},
   journal = {Journal of Geophysical Research: Space Physics},
   keywords = {X-ray spectra,balloon measurements,bremsstrahlung emissions,energetic electron precipitation,inverse modeling,precipitation characteristics},
